<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">

<h1>Login Page</h1>
<%=form_tag '/login', method: :post do%>

<form class="form-horizontal">
<div class="form-group">
<%= label_tag :email %>
<%= text_field_tag :email, "",class:"form-control" %>
</div>
<div class="form-group">
<%= label_tag :password %>
<%= password_field_tag :password, "", class:"form-control" %>
</div>
<%=submit_tag 'Login' %>
<%end%>