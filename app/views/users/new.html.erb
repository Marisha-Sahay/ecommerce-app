<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
<h1>User signup</h1>
    <% if @user && @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li class="error"><%= message %></li>
        <%end%>
      </ul>
    <% end %>
<%= form_tag '/users', method: :post do %>
<form class="form-horizontal">
<div class="form-group">
<%=label_tag :name %>
<%=text_field_tag :name, @user.name, class:"form-control" %>
</div>
<div class="form-group">
<%=label_tag :email %>
<%=text_field_tag :email, @user.email, class:"form-control" %>
</div>
<div class="form-group">
<%=label_tag :password %>
<%=text_field_tag :password, @user.email, class:"form-control" %>
</div>
<div class="form-group">
<%=label_tag :password_confirmation %>
<%=text_field_tag :password_confirmation, "", class:"form-control"  %>
</div>

<%= submit_tag "Submit" %>
<% end %>
</form>