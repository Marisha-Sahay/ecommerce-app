<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h1>New Product</h1>
    <%= form_tag "/products", method: :post do%>
    <form class="form-horizontal">
      <div class="form-group">
        <%= label_tag :name%>
        <%= text_field_tag :name,"", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :description%>
        <%= text_field_tag :description, "", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :price%>
        <%= text_field_tag :price, "", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :image%>
        <%= text_field_tag :image, "", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :size%>
        <%= text_field_tag :size, "", class:"form-control"%>
        </div>
        <div class="form-group">
        <%= label_tag :supplier%>
        <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
        </div>
        <div class="form-group">
          <%= submit_tag "Create Record"%>
        </div>
      </form>
      <%end%>