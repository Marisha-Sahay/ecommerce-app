<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h1>New Product</h1>
<%= form_tag "/products", method: :post do%>
<form class="form-horizontal">
<div class="form-group">
<%= label_tag :name%>
<%= text_field_tag :name%>
</div>
<div class="form-group">
<%= label_tag :description%>
<%= text_field_tag :description%>
</div>
<div class="form-group">
<%= label_tag :price%>
<%= text_field_tag :price%>
</div>
<div class="form-group">
<%= label_tag :size%>
<%= text_field_tag :size%>
<div class="form-group">
<%= label_tag :image, "Image URL"%>
<%= text_field_tag :image%>
</div>
<div class="form-group">
<%= submit_tag "Create Record"%>
</div>
</form>
<%end%>